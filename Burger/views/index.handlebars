
<div class="jumbotron" style="background-image: url('McDNewHeader.jpg'); background-size: 100%;" >
  <div class="container">
    <h1 class="display-center">EAT DA BURGER!!!</h1>
    <p class="lead">Create Your Own Burger and Proceed to DEVOUR IT!!!</p>
  </div>
</div>

  {{!--Left--}}
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <div class="task">

        {{#each Burger}} {{#unless this.devoured}}

        <pre>{{this.id}}. {{this.burger}}</pre>
  

      <form method="POST" action="/burgers/update?_method=PUT" class="button">
        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
        <button type="submit" class="btn btn-danger">DEVOUR BURGER!!!</button>
      </form>
 
    {{/unless}} {{/each}}


</div>
  </div>
  {{!--Middle--}}
  <div class="col-md-4 enter_section" style="text-align: center;">
    <form action="/burgers/create" method="POST">
      <input type="text" name="burger" class="form-control" value="" id="enter_text">
      <button type="submit" class="btn btn-danger" id="text-enter-button">SUBMIT</button>
    </form>
    <p>Create a BURGER!!!</p>
  </div>
  {{!--Right--}}
  <div class="col-md-4" class="task">
    {{#each Burger}} {{#if this.devoured}}
    <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger}}" readonly> {{/if}} {{/each}}
  </div>
</div>
</div>